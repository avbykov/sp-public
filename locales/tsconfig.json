{
  "compilerOptions": {
    "target": "ES2020",
    "removeComments": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "alwaysStrict": true,
    "resolveJsonModule": true
  },
  "include": ["*.ts", "*/*.ts", "./package.json"]
}